<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.compsgeek.javafy">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".tutorials.TutorialIntroduction"
            android:label="@string/title_activity_tutorial_introduction"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.compsgeek.javafy.MainActivity" />
        </activity>
        <activity
            android:name=".tutorials.TutorialOperators"
            android:label="@string/title_activity_tutorial_operators"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.compsgeek.javafy.MainActivity" />
        </activity>
        <activity
            android:name=".tutorials.TutorialCtrlStmts"
            android:label="@string/title_activity_tutorial_ctrl_stmts"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".tutorials.TutorialClassesNObjects"
            android:label="@string/title_activity_tutorial_classes_nobjects"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".tutorials.TutorialIoArrays"
            android:label="@string/title_activity_tutorial_io_arrays"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>